@model List<PROJETO01.Modelos.Cidade>
<div class="container-fluid " style= "border:groove; color:thick;background-color:white">
    <br />
<h3>
    CADASTRO DE CIDADES
    <a class="btn btn-sm btn-dark float-right" href="/Cidade/Adicionar">
        + ADICIONAR
    </a>
</h3>

<table class="table table-hover ">
    <thead>
        <tr>
            <th>uf</th>
            <th>Nome</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.uf</td>
                <td>@item.Nome</td>
                <td>
                    <a href="/Cidade/Editar?CidadeId=@item.CidadeId" class="btn btn-sm btn-warning">
                        Editar
                    </a>
                    <a href="/Cidade/Excluir?CidadeId=@item.CidadeId" class="btn btn-sm btn-danger">
                        Excluir
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
    </div>